			targetProject="src/main/java">
			<property name="enableSubPackages" value="true" />
		</sqlMapGenerator>

		<javaClientGenerator type="XMLMAPPER"
			targetPackage="com.zhu.prototype.dao" targetProject="src/main/java">
			<property name="enableSubPackages" value="true" />
		</javaClientGenerator>

		<table tableName="user" domainObjectName="User">
		</table>

		<table tableName="news" domainObjectName="News">
			<generatedKey column="id"
				sqlStatement="select IF(MAX(id) is not null, MAX(id) + 1,CONCAT(DATE_FORMAT(NOW(),'%Y%m%d'),'0001')) from news where abs(datediff(date, now())) = 0;" />
		</table>

	</context>
</generatorConfiguration>